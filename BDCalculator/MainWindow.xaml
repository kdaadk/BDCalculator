<Window x:Class="BDCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDCalculator"
        mc:Ignorable="d"
        Title="Birthday Calculator" Height="400" Width="625">
    <Grid>
        <DatePicker Name="datePicker" HorizontalAlignment="Center" Margin="-100,26,0,0" VerticalAlignment="Top" Width="115" Height="25"/>
        <Button Name="calculate" Content="Calculate" VerticalAlignment="Top" Margin="150,26,0,0" HorizontalAlignment="Center" Width="115" Height="25" Click="Calculate_OnClick"/>
        
        
        <Canvas Name="canvas" Background="Lavender" Height="270" Width="500" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Polygon Name="pentagramPolygon" Points="150 50, 250 125, 200 225, 100 225, 50 125, 150 50" Stroke="Black" StrokeThickness="2" /> 
            
            
        </Canvas>
        
    </Grid>
</Window>
